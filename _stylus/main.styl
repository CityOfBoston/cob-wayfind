*
  box-sizing: border-box

html
  height: 100%
  font-size: responsize 14px 18px

body
  height: 100%
  margin: 0
  padding: 0
  background-color: #fff;

.container
  height: 100%
  display: flex
  flex-direction: column
  background: red

.header
  flex: 0.05
  background-color: #f3f3f3

.footer
  flex: 0.05
  background-color: #f3f3f3

.map
  flex: 0.4
  background: #ffffff

.cityscore
  flex: 0.1
  background: rgb(70, 105, 93)

.events
  flex: 0.4
  background: orange

.image-map
  width: 100%
  height: 100%
